{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "@" :["./src/*"],
      "@pages" :["./src/pages"],
      "@services" :["./src/services/config"],

      "@routers" :["./src/router/routers.tsx"],

      "@auth" :["./src/interfaces/auth.ts"],
      "@auth-services" :["./src/services/auth/auth.ts"],
      "@container" :["./src/components/containers"],

      "@layout" :["./src/components/ui/layout.tsx"],
      "@account" :["./src/components/ui/account.tsx"],
      
      "@cookies" :["./src/utils/cookies.ts"],
      "@validation" :["./src/utils/validations.ts"],
      "@notifation" :["./src/utils/notifation.ts"],
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
