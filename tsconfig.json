{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "@" :["./src/*"],
      "@authstore" :["./src/store/auth.ts"],
      "@categorystore" :["./src/store/category.ts"],
      "@brandstore" :["./src/store/brands.ts"],

      "@delet" :["./src/assets/delet.tsx"],
      "@edit" :["./src/assets/edit.tsx"],
      "@pages" :["./src/pages"],
      
      "@routers" :["./src/router/routers.tsx"],

      "@auth" :["./src/interfaces/auth.ts"],
      "@category" :["./src/interfaces/category.ts"],
      "@global" :["./src/interfaces/global.ts"],
      "@brands" :["./src/interfaces/brands.ts"],

      "@services" :["./src/services/config"],
      "@auth-services" :["./src/services/auth/auth.ts"],
      "@category-services" :["./src/services/category/category.ts"],
      
      "@container" :["./src/components/containers"],
      "@layout" :["./src/components/ui/layout.tsx"],
      "@account" :["./src/components/ui/account.tsx"],
      "@globaltable" :["./src/components/ui/table.tsx"],
      "@globalpaganation" :["./src/components/ui/pagination.tsx"],

      "@modalcategory" :["./src/components/modal/modal-category/modal-category.tsx"],
      "@modalsubcategory" :["./src/components/modal/modal-supcategory/modal-subcategory.tsx"],
      "@modaldelet" :["./src/components/modal/modal-delet/modal-delet.tsx"],
      "@modalbrands" :["./src/components/modal/modal-brands/modal-brands.tsx"],
      
      "@cookies" :["./src/utils/cookies.ts"],
      "@validation" :["./src/utils/validations.ts"],
      "@notifation" :["./src/utils/notifation.ts"],
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
